{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "incremental": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitAny": false
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}